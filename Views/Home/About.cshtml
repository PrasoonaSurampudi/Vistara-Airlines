@{
    ViewBag.Title = "About";
}

<!-- About Page Container -->
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-4 p-4">
                <div class="card-header bg-primary text-white text-center fs-3 fw-bold rounded-top-4">
                    About Vistara Airlines
                </div>
                <div class="card-body">
                    <h4 class="text-secondary mb-3">Welcome to Vistara Airlines! ✈️</h4>
                    <p class="lead">
                        Vistara Airlines is committed to providing exceptional air travel experiences.
                        From comfortable seating and timely departures to world-class customer service,
                        we ensure every journey with us is smooth, safe, and memorable.
                    </p>

                    <hr />

                    <h5 class="fw-bold text-primary">Our Vision</h5>
                    <p>
                        To become the most trusted and admired airline by offering seamless travel
                        experiences, innovative services, and a strong focus on customer satisfaction.
                    </p>

                    <h5 class="fw-bold text-primary">Our Services</h5>
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item">✅ Domestic and International Flights</li>
                        <li class="list-group-item">✅ Online Booking & Easy Check-in</li>
                        <li class="list-group-item">✅ Comfortable Seating & In-flight Entertainment</li>
                        <li class="list-group-item">✅ 24/7 Customer Support</li>
                    </ul>

                    <h5 class="fw-bold text-primary">Contact Us</h5>
                    <p>
                        Email: <a href="mailto:support@vistaraairlines.com">support@vistaraairlines.com</a><br />
                        Phone: +91 1800 123 4567<br />
                        Address: Vistara Airlines, 123 Skyway, Mumbai, India
                    </p>

                    <div class="text-center mt-4">
                        <a href="/" class="btn btn-primary btn-lg shadow-sm">🏠 Back to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom Styles -->
<style>
    body {
        background: linear-gradient(120deg, #e3f2fd, #ffffff);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .card-body p, .card-body ul {
        font-size: 1.05rem;
        line-height: 1.6;
    }

    .list-group-item {
        font-size: 1rem;
        font-weight: 500;
    }

    .card-header {
        letter-spacing: 1px;
    }

    a.btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 10px rgba(0,0,0,0.15);
        transition: all 0.2s ease-in-out;
    }
</style>
